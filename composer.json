{
    "name": "lastzero/test-tools",
    "type": "library",
    "description": "Test Tools for PHPUnit",
    "keywords": ["phpunit","testing","database","db","dependency injection","doctrine","dbal","mock","fixture"],
    "homepage": "https://github.com/lastzero/test-tools",
    "license": "MIT",
    "authors": [
        {
            "name": "Michael Mayer",
            "email": "michael@lastzero.net",
            "homepage": "https://lastzero.net/",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.5.9",
        "symfony/dependency-injection": "2.8 - 3.0",
        "symfony/yaml": "2.8 - 3.0",
        "symfony/config": "2.8 - 3.0",
        "mockery/mockery": "~0.9"
    },
    "require-dev": {
        "symfony/console": "2.8 - 3.0",
        "symfony/framework-bundle": "2.8 - 3.0",
        "doctrine/dbal": "~2.5",
        "guzzle/guzzle": "~3.9.2",
        "kriswallsmith/buzz": "~0.10",
        "phpunit/phpunit": "@stable",
        "sstalle/php7cc": "*"
    },
    "autoload": {
        "psr-0": { "TestTools\\": "src/" }
    },
    "config": {
        "bin-dir": "bin/"
    }
}
